<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kszajgapp.mozgaserzekelo.mozgaserzekelo.ProfileActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Switch
        android:id="@+id/switch_Subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="16dp"
        android:text="@string/feliratkozas"
        app:layout_constraintRight_toLeftOf="@+id/btn_Logout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1" />

    <ToggleButton
        android:id="@+id/tbtn_PIRSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_show_token"
        app:layout_constraintTop_toTopOf="@+id/tvSzenzor"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/tvSzenzor"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_above="@+id/btn_show_token"
        android:layout_alignTop="@id/tbtn_PIRSensor"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="81dp"
        android:layout_toLeftOf="@id/tbtn_PIRSensor"
        android:gravity="center_vertical"
        android:text="@string/szenzorallapot"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/spinner_filter_logs"
        app:layout_constraintLeft_toLeftOf="@+id/logitems"
        app:layout_constraintRight_toLeftOf="@+id/tbtn_PIRSensor"
        app:layout_constraintTop_toTopOf="@+id/switch_Subscribe"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btn_show_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TOKEN"
        app:layout_constraintBottom_toBottomOf="@+id/btn_delete_logs"
        app:layout_constraintLeft_toRightOf="@+id/btn_delete_logs"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/btn_delete_logs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="@string/deletelogs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Spinner
        android:id="@+id/spinner_filter_logs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:entries="@array/filter_logs_array"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tbtn_PIRSensor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_show_token"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"></Spinner>

    <Button
        android:id="@+id/btn_Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Kilépés"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ListView
        android:id="@+id/logitems"
        android:layout_width="378dp"
        android:layout_height="227dp"
        android:layout_below="@+id/btn_show_token"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
